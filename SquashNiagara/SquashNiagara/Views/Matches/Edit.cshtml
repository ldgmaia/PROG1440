<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Fixture.ID" />
                <input type="hidden" asp-for="Fixture.SeasonID" />
                <input type="hidden" asp-for="Fixture.DivisionID" />
                <input type="hidden" asp-for="Fixture.HomeTeamID" />
                <input type="hidden" asp-for="Fixture.AwayTeamID" />
                <input type="hidden" asp-for="Fixture.Date" />
                <input type="hidden" asp-for="Fixture.Time" />
                <input type="hidden" asp-for="Fixture.VenueID" />
                <input type="hidden" asp-for="Fixture.CaptainResultID" />
                <input type="hidden" asp-for="Fixture.CaptainApproveID" />
                <input type="hidden" asp-for="Fixture.HomeTeamBonus" />
                <input type="hidden" asp-for="Fixture.AwayTeamBonus" />
            </div>
            @{ int counter = 1;
                for (int i = 0; i < ViewBag.nPositions; i++)
                {
                    <div class="form-group row">
                        <input type="hidden" asp-for="Matches[i].ID" />
                        <label asp-for="Matches[i].HomePlayerID" class="text-center col-sm-4  control-label"></label>
                        <label class="text-center col-sm-2">Position @counter</label>
                        <label asp-for="Matches[i].AwayPlayerID" class="text-center col-sm-4  control-label"></label>
                    </div>
                    <div class="form-group row">
                        <input type="hidden" asp-for="Matches[i].FixtureID" value=@ViewBag.FixtureID />

                        <div class="col-sm-2">
                            @if (counter == 1)
                            {
                                <select asp-for="Matches[i].HomePlayerID" class="form-control" asp-items="ViewBag.HomePlayerIDPos1"></select>
                            }
                            else if (counter == 2)
                            {
                                <select asp-for="Matches[i].HomePlayerID" class="form-control" asp-items="ViewBag.HomePlayerIDPos2"></select>
                            }
                            else if (counter == 3)
                            {
                                <select asp-for="Matches[i].HomePlayerID" class="form-control" asp-items="ViewBag.HomePlayerIDPos3"></select>
                            }
                            else if (counter == 4)
                            {
                                <select asp-for="Matches[i].HomePlayerID" class="form-control" asp-items="ViewBag.HomePlayerIDPos4"></select>
                            }
                            else if (counter == 5)
                            {
                                <select asp-for="Matches[i].HomePlayerID" class="form-control" asp-items="ViewBag.HomePlayerIDPos5"></select>
                            }
                        </div>

                        <div class="col-sm-2">
                            @{
                                string chk0 = "";
                                string chk1 = "";
                                string chk2 = "";
                                string chk3 = "";
                                if (Model.Matches[i].HomePlayerScore == 0)
                                {
                                    chk0 = "checked";
                                }
                                else if (Model.Matches[i].HomePlayerScore == 1)
                                {
                                    chk1 = "checked";
                                }
                                else if (Model.Matches[i].HomePlayerScore == 2)
                                {
                                    chk2 = "checked";
                                }
                                else if (Model.Matches[i].HomePlayerScore == 3)
                                {
                                    chk3 = "checked";
                                }

                            }
                            <input id="HomePlayerScore[@i]" name="Matches[@i].HomePlayerScore" type="radio" value="0" @chk0 />
                            0&nbsp;&nbsp;
                            <input id="HomePlayerScore[@i]" name="Matches[@i].HomePlayerScore" type="radio" value="1" @chk1 />
                            1&nbsp;&nbsp;
                            <input id="HomePlayerScore[@i]" name="Matches[@i].HomePlayerScore" type="radio" value="2" @chk2 />
                            2&nbsp;&nbsp;
                            <input id="HomePlayerScore[@i]" name="Matches[@i].HomePlayerScore" type="radio" value="3" @chk3 />
                            3
                        </div>


                        <div class="col-sm-2 lead text-center">VS.</div>

                        <div class="col-sm-2">
                            @if (counter == 1)
                            {
                                <select asp-for="Matches[i].AwayPlayerID" class="form-control" asp-items="ViewBag.AwayPlayerIDPos1"></select>
                            }
                            else if (counter == 2)
                            {
                                <select asp-for="Matches[i].AwayPlayerID" class="form-control" asp-items="ViewBag.AwayPlayerIDPos2"></select>
                            }
                            else if (counter == 3)
                            {
                                <select asp-for="Matches[i].AwayPlayerID" class="form-control" asp-items="ViewBag.AwayPlayerIDPos3"></select>
                            }
                            else if (counter == 4)
                            {
                                <select asp-for="Matches[i].AwayPlayerID" class="form-control" asp-items="ViewBag.AwayPlayerIDPos4"></select>
                            }
                            else if (counter == 5)
                            {
                                <select asp-for="Matches[i].AwayPlayerID" class="form-control" asp-items="ViewBag.AwayPlayerIDPos5"></select>
                            }
                        </div>

                        <div class="col-sm-2">
                            @{
                                chk0 = "";
                                chk1 = "";
                                chk2 = "";
                                chk3 = "";
                                if (Model.Matches[i].AwayPlayerScore == 0)
                                {
                                    chk0 = "checked";
                                }
                                else if (Model.Matches[i].AwayPlayerScore == 1)
                                {
                                    chk1 = "checked";
                                }
                                else if (Model.Matches[i].AwayPlayerScore == 2)
                                {
                                    chk2 = "checked";
                                }
                                else if (Model.Matches[i].AwayPlayerScore == 3)
                                {
                                    chk3 = "checked";
                                }

                            }
                            <input id="AwayPlayerScore[@i]" name="Matches[@i].AwayPlayerScore" type="radio" value="0" @chk0 />
                            0&nbsp;&nbsp;
                            <input id="AwayPlayerScore[@i]" name="Matches[@i].AwayPlayerScore" type="radio" value="1" @chk1 />
                            1&nbsp;&nbsp;
                            <input id="AwayPlayerScore[@i]" name="Matches[@i].AwayPlayerScore" type="radio" value="2" @chk2 />
                            2&nbsp;&nbsp;
                            <input id="AwayPlayerScore[@i]" name="Matches[@i].AwayPlayerScore" type="radio" value="3" @chk3 />
                            3
                        </div>
                    </div>
                    counter += 1;
                };
            }

            @{
                string homeChecked = "";
                string tieChecked = "checked";
                string awayChecked = "";
            }
            <div class="form-group row">
                @if (Model.Fixture.HomeTeamBonus == 0.5 || Model.Fixture.AwayTeamBonus == 0.5)
                {
                    tieChecked = "checked";
                }
                else if (Model.Fixture.HomeTeamBonus == 1)
                {
                    homeChecked = "checked";
                    tieChecked = "";
                }
                else if (Model.Fixture.AwayTeamBonus == 1)
                {
                    awayChecked = "checked";
                    tieChecked = "";
                }
                <label asp-for="Fixture.HomeTeamBonus" class="col-sm-4  text-center control-label"></label>
                <div class="col-sm-1">
                    Home
                    <input id="Bonus" name="Bonus" value="Home" type="radio" @homeChecked>
                </div>
                <div class="col-sm-1">
                    Tie
                    <input id="Bonus" name="Bonus" value="Tie" type="radio" @tieChecked>
                </div>
                <div class="col-sm-1">
                    Away
                    <input id="Bonus" name="Bonus" value="Away" type="radio" @awayChecked>
                </div>
                <label asp-for="Fixture.AwayTeamBonus" class="col-sm-4  text-center control-label"></label>

            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>

</div>

<div>
    <a asp-area="" asp-controller="Fixtures" asp-action="Index">Back to List</a>
</div>

