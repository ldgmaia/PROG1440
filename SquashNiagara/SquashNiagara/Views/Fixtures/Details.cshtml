            {
                @:Admin
            }
        </dd>
        <dt>
            Result approved by
        </dt>
        <dd>
            @if (Model.CaptainApproveID.HasValue)
            {
                @Html.DisplayFor(model => model.CaptainApprove.FullName)
            }
            else if (Model.Approved == true)
            {
                @:Admin
            }
        </dd>
