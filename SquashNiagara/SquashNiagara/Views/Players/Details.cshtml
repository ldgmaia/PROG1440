@model SquashNiagara.Models.Player

@{
    ViewData["Title"] = "Details";
}

<h2> @Html.DisplayFor(model => model.FirstName)'s Player Details</h2>

<div class="row">
    <div class="col-md-4">
        @{
            if (Model.imageContent != null && Model.imageMimeType.Contains("image"))
            {
                string imageBase64 = Convert.ToBase64String(Model.imageContent);
                string imageSrc = string.Format("data:" + Model.imageMimeType + ";base64,{0}", imageBase64);
                <img src="@imageSrc" style="max-width: 150px; max-height: 150px" class="img-responsive img-rounded" />
            }
            if (Model.imageContent == null)
            {
                <br /><img src="~/images/Default.png" alt="No Image" style="width: 150px; height: 150px" class="img-responsive img-rounded" />
            }
        }
    </div>
    
    @*<div class="row text-center">*@

        <div class="col-md-4">
            <div class="panel panel-primary">
                <div class="panel-heading">@Html.DisplayFor(model => model.FirstName)'s Next Match </div>
                <div class="panel-body">
                    WO 1 VS RC 2
                    <p>
                        <span class="fo"></span>
                        <span class="fa fa-calendar fa-lg colored-tex"></span>
                        10/03/2019
                        <span class="fa fa-clock-o fa-lg colored-tex"></span>
                        (<small>12:00 pm</small>)
                    </p>
                    <p><small>Venue WO</small></p>
                </div>
            </div>
        </div>

        <div class="col-sm-offset-4 col-md-4">
            <div class="panel panel-danger">
                <div class="panel-heading">@Html.DisplayFor(model => model.FirstName)'s Last Match   </div>
                <div class="panel-body">
                    <p class="text-success">   @ViewBag.LastFixture.HomeTeam.Name (@ViewBag.LastFixture.HomeTeamScore - @ViewBag.LastFixture.AwayTeamScore) @ViewBag.LastFixture.AwayTeam.Name</p>
                    @Html.DisplayFor(model => model.FirstName)'s plays against
                    John - Positon 1
                    <p>
                        <span class="fo"></span>
                        <span class="fa fa-calendar fa-lg colored-tex"></span>
                        @ViewBag.LastFixture.Date.ToShortDateString()
                        <span class="fa fa-clock-o fa-lg colored-tex"></span>
                        (<small>@ViewBag.LastFixture.Date.ToShortTimeString()</small>)
                    </p>
                    <p>Points 3</p>

                    <p><small>Venue BACC</small></p>
                </div>
            </div>
        </div>
    @*</div>*@

</div>


<div>


    

    <div class="row text-center">

        <div class=" col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading">@Html.DisplayFor(model => model.FirstName)'s Total Points <i class="fas fa-bullseye"></i> </div>
                <div class="panel-body">
                    <p class="lead"><strong> 35</strong></p>
                </div>
            </div>
        </div>
        <div class=" col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading">@Html.DisplayFor(model => model.FirstName)'s Total personal wins <i class="fas fa-award"></i> </div>
                <div class="panel-body">
                    <p class="lead"><strong> 15</strong></p>
                </div>
            </div>
        </div>
        <div class=" col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading">Team's Total Fixture's won <i class="fas fa-trophy"></i> </div>
                <div class="panel-body">
                    <p class="lead"><strong> 7</strong></p>
                </div>
            </div>
        </div>
        <div class=" col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading">Team's Total Fixture's lost <i class="fas fa-flag-checkered"></i> </div>
                <div class="panel-body">
                    <p class="lead"><strong> 15</strong></p>
                </div>
            </div>
        </div>

    </div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DOB)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DOB)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Position.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Position.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Team.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Team.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> 
    @if (User.IsInRole("Admin"))
    {
        @:| <a asp-action="Index">Back to List</a>
    }

</div>
